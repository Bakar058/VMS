@model IEnumerable<VMS.Models.Meeting>
@{
    ViewBag.Title = "GetMeetings";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<section class="pt-70">
    <div class="container">


        <h2>GetMeetings</h2>


        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class=" table ">
                            <thead>
                                <tr>
                                    <th>Meeting Id</th>
                                    <th>User ID</th>
                                    <th>Admin ID</th>
                                    <th>Date</th>
                                    <th>Meeting Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var meeting in Model)
                                    {
                                        <tr class="mt-3">
                                            <td>
                                                @meeting.id
                                            </td>
                                            <td>
                                                @meeting.user_id
                                            </td>
                                            <td>
                                                @meeting.admin_id

                                            </td>
                                            <td>
                                                @meeting.meeting_date.ToLongDateString()
                                            </td>
                                            @{
                                                if (meeting.approval == 0)
                                                {
                                                    <td>
                                                        Pendimg Approval
                                                    </td>
                                                                                        
                                                }
                                                else if (meeting.approval == 1)
                                                {
                                                    <td> Meeting is Approved</td>
                                                }
                                                else
                                                {

                                                    <td>Meeting Declined</td>
                                                }
                                            }
                                            <td>
                                                @* <a href="@Url.Action("MeetingDetail","User",new {id= meeting.id})">Details</a>*@
                                            </td>

                                        </tr>

                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>User Name</th>
                                    <th>Role</th>
                                    <th>Active</th>
                                    <th>Account Status</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

