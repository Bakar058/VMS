@model IEnumerable<VMS.Models.Meeting>
@{
    ViewBag.Title = "GetMeetings";
}

<section  class="pt-70">
    <div class="container">

        <h2>All Meetings</h2>
            <div class="card">
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" >
                            <thead>
                                <tr>
                                    <th>Meeting Id</th>
                                    <th>User ID</th>
                                    <th>Admin ID</th>
                                    <th>Date</th>
                                    <th>Meeting Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var meeting in Model)
                                    {
                                        <tr class="mt-3">
                                            <td>
                                                @meeting.id
                                            </td>
                                            <td>
                                                @meeting.user_id
                                            </td>
                                            <td>
                                                @meeting.admin_id

                                            </td>
                                            <td>
                                                @meeting.meeting_date
                                            </td>
                                            @{
                                                if (meeting.approval == 0)
                                                {
                                                    <td class="bg-warning">
                                                        Pendimg Approval
                                                    </td>
                                                }
                                                else if (meeting.approval == 1)
                                                {
                                                    <td class="bg-success"> Approved</td>
                                                }
                                                else
                                                {
                                                    <td class="bg-danger"> Declined</td>

                                                }
                                            }
                                            <td>
                                                <a href="@Url.Action("MeetingDetail","User",new {id= meeting.id})">Details</a>
                                            </td>

                                        </tr>

                                    }
                                }
                            </tbody>
                          
                        </table>
                    </div>
                </div>
            </div>
        </div>

   
</section>