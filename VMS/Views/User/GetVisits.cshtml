@model IEnumerable<VMS.Models.visit>

@{
    ViewBag.Title = "GetVisits";
}



<section class="pt-70">
    <div class="container">

        <h2>All Visits</h2>
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                               
                                <th>User ID</th>
                                
                                <th>Date</th>
                                <th>Visit Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var visit in Model)
                                {
                                    <tr class="mt-3">
                                        
                                        <td>
                                            @visit.user_id
                                        </td>
                                       
                                        <td>
                                            @visit.visit_date
                                        </td>
                                        @{
                                            if (visit.approval == 0)
                                            {
                                                <td class="bg-warning">
                                                    Pendimg Approval
                                                </td>
                                            }
                                            else if (visit.approval == 1)
                                            {
                                                <td class="bg-success"> Approved</td>
                                            }
                                            else
                                            {
                                                <td class="bg-danger"> Declined</td>

                                            }
                                        }
                                        <td>
                                            <a href="@Url.Action("VisitDetail","User",new {id= visit.Id})">Details</a>
                                        </td>

                                    </tr>

                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>


</section>